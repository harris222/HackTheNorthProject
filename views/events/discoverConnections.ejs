<% include ./partials/header %>
//master/views/events


      
      
    <div class="site-section site-hero inner">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-md-10">
            <span class="d-block mb-3 caption" data-aos="fade-up">Hack the North</span>
            <h1 class="d-block mb-4" data-aos="fade-up" data-aos-delay="100">Your Fellow Attendees</h1>
          </div>
        </div>
      </div>
    </div>


    <div class="site-section">
      <div class="container">

<script>
    function convertGrade(var grade){
        
        if (grade == 11){
            return "Grade 11";
        } else if (grade == 12){
            return "Grade 12"
        } else if (grade == 1){
            return "Year 1, University"
        } else if (grade == 2){
            return "Year 2, University"
        } else if (grade == 3){
            return "Year 3, University"
        } else if (grade == 4){
            return "Year 4, University"
        } else{
            return "Not in school"
        }
        
    }
          
          
          
</script>

<% event.participants.forEach(function(user){ %>  //to be implemented loop  
           
    <div class="row align-items-center speaker">
        <div class="col-lg-5 mb-5 mb-lg-0 order-lg-2" data-aos="fade" data-aos-delay="100">
            <img src="images/user.png" alt="Image" class="img-fluid">
        </div>
        
      <div class="col-lg-6 ml-auto order-lg-1">
        <h2 class="text-white mb-4 name" data-aos="fade-left" data-aos-delay="200"> <% = user.firstName + " " + user.lastName %> </h2>
        <div class="bio pr-lg-5">
          <span class="text-uppercase text-primary d-block mb-3" data-aos="fade-right" data-aos-delay="300"><%= convertGrade(user.grade) %></span>
          <p class="mb-4" data-aos="fade-left" data-aos-delay="400"><%= user.personalDescription %></p>
          <p data-aos="fade-left" data-aos-delay="500">
              <% if (user.alreadyOnATeam){ %>
                    Join <%= user.firstName %>'s team &mdash;
              
              <%} else { %>
                    Invite <%= user.firstName %> &mdash;
              
              <% } %>
              
            <a href="#" class="p-2"><span class="icon-plus" onclick = "this.class = 'icon-check'"></span></a>

          </p>
        </div>
      </div>
    </div>
           
           

<% }) %>

          
        </div>
    </div>

<% include ./partials/footer %>